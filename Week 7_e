#include <iostream>
#include <string>

int main() {

    using namespace std;
    string firstName, middleName, lastName;

    cout << "Please enter your first name, middle name, and last name in order: ";
    cin >> firstName >> middleName >> lastName;
    cout << lastName << ", " << firstName << " " << middleName[0] << ".\n";

    return 0;
}
