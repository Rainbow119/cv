#include <iostream>
using namespace std;

int main () {

    int n, i, j;

    cout<<"Please input a positive integer.\n";
    cin>>n;

    for (i=n; i>0 ; i--) {
        for (j=0 ; j<n-i; j++) {
            cout<<" ";
        }
        for (j=0 ; j<(i*2-1); j++) {
            cout<<"*";
        }
        cout<<endl;
    }
    for (i=1; i<=n ; i++) {
        for (j=0 ; j<n-i; j++) {
            cout<<" ";
        }
        for (j=0 ; j<(i*2-1); j++) {
            cout<<"*";
        }
        cout<<endl;
    }

    return 0;
}
