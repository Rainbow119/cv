#include <iostream>
using namespace std;

int main () {

    int num1, num2, sum, subtract, mult, div, mod; 

    cout<<"Please enter two positive integers, separated by a space; "<<endl;
    cin>>num1>>num2;

    sum = num1 + num2; 
    subtract = num1 - num2;
    mult = num1 * num2;
    float fullDiv = (float)num1/num2;
    div = num1 / num2;
    mod = num1 % num2;

    cout<<num1<<" + "<<num2<<" = "<<sum<<endl;
    cout<<num1<<" - "<<num2<<" = "<<subtract<<endl;
    cout<<num1<<" * "<<num2<<" = "<<mult<<endl;
    cout<<num1<<" / "<<num2<<" = "<<fullDiv<<endl;
    cout<<num1<<" div "<<num2<<" = "<<div<<endl;
    cout<<num1<<" mod "<<num2<<" = "<<mod<<endl;


    return 0;
}
