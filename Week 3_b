#include <iostream>
using namespace std;

int main() {

    int number;

    cout<<"Enter decimal number: \n";
    cin>>number;
    cout<<number<<" is ";

    while (number >= 1000) {
        cout<<'M';
        number -= 1000;
    }
    while (number >= 500) {
        cout<<'D';
        number -= 500;
    }
    while (number >= 100) {
        cout<<'C';
        number -= 100;
    }
    while (number >= 50) {
        cout<<'L';
        number -= 50;
    }
    while (number >= 10) {
        cout<<'X';
        number -= 10;
    }
    while (number >= 5) {
        cout<<'V';
        number -= 5;
    }
    while (number >= 1) {
        cout<<'I';
        number -= 1;
    }
    return 0;
}

